<div class="sidebar b-radius-l">
  <div class="top-sidebar">
    <%= image_tag 'logo.png', class:"logo"%>
    <div class="info-profile">
      <%= image_tag 'profil.png', class:"img-profile"%>
      <div class="name-function">
        <p class="name p-bold ">RÃ©mi Lavigne</p>
        <p class="function p-small">Sales representative</p>
      </div>
    </div>
    <hr/>
    <div class="home-button">
        <%= link_to root_path(), class: "btn-primary-home" do %>
        <i class="fa-solid fa-house me-2"></i> Home
        <% end %>
        <%= link_to map_path, class: "btn-primary-home" do %>
        <i class="fa-solid fa-map me-2"></i> Map
        <% end %>
    </div>
  </div>
  <div class="bottom-sidebar">
    <a class="btn-primary" data-bs-toggle="modal" data-bs-target="#notesModal">
      <i class="fa-solid fa-pen-to-square me-2"></i>
      Notes
    </a>
    <div class="btn-logout b-radius outline-gray mb-2">
      <i class="fa-solid fa-arrow-right-from-bracket me-2 "></i>
      <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="notesModal" tabindex="-1" aria-labelledby="notesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="notesModalLabel">Notes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'pages/notes_form'%>
      </div>
    </div>
  </div>
</div>
