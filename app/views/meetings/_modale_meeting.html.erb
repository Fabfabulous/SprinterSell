<!-- Modal -->
<div class="modal fade" id="<%= modal_id %>" tabindex="-1" aria-labelledby="meetingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="meetingModalLabel"><%= meeting.persisted? ? 'Edit' : 'New' %> meeting</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render partial: "meetings/agenda-form", meeting: meeting %>
      </div>
    </div>
  </div>
</div>
